<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_score"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:id="@+id/plusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Увеличить"
        android:layout_below="@id/mainTxt"
        android:onClick="plusScore"
        android:src="@drawable/natura" />

    <ImageView
        android:id="@+id/minusBtn"
        android:layout_width="227dp"
        android:layout_height="243dp"
        android:layout_below="@id/plusBtn"
        android:layout_marginTop="3dp"
        android:clickable="true"
        android:contentDescription="Уменьшить"
        android:onClick="minusScore"
        android:src="@drawable/stariy" />

    <ImageView
        android:id="@+id/sbrosBtn"
        android:layout_width="233dp"
        android:layout_height="174dp"
        android:layout_below="@id/minusBtn"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:contentDescription="Сбросить"
        android:onClick="sbrosScore"
        android:src="@drawable/iceberg" />

</RelativeLayout>
